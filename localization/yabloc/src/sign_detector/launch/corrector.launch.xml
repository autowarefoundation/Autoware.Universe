<launch>
    <!-- ========================================= -->
    <arg name="use_sim_time" default="true"/>
    <arg name="log_level" default="warn"/>

    <arg name="image_size" default="800"/>
    <arg name="max_range" default="40"/>

    <!-- ========================================= -->
    <node name="camera_corrector" pkg="sign_detector" exec="camera_corrector_node" output="screen" args="--ros-args --log-level $(var log_level)">
        <param name="use_sim_time" value="$(var use_sim_time)"/>
        <param name="image_size" value="$(var image_size)"/>
        <param name="max_range" value="$(var max_range)"/>
    </node>
</launch>
