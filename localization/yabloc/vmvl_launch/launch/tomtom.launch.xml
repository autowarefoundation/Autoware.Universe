<launch>
    <arg name="road_marking_labels" default="[zebra_marking, line_thin, line_thick, pedestrian_marking, stop_line, road_border, curbstone]" />
    <arg name="sign_board_labels" default="[traffic_sign, guard_rail]" />

    <arg name="use_sensor_qos" default="false"/>

    <arg name="min_segment_length" default="1.5" description="[m]"/>
    <arg name="max_segment_distance" default="30.0" description="[m]"/>
    <arg name="rtk_enabled" default="false" description="GNSS-RTK is enabled?"/>

    <arg name="use_eagleye" default="false"/>
    <arg name="force_zero_tilt" default="false"/>

    <arg name="static_linear_covariance" default="12.00"/>
    <arg name="static_angular_covariance" default="0.0015"/>
    <arg name="static_scale_factor" default="1.009"/>

    <arg name="refiner" default="false"/>
    <arg name="reference_bags_path" default="$(env HOME)/Reference/odaiba_weather/"/>


    <include file="$(find-pkg-share vmvl_launch)/launch/run.launch.xml">
        <arg name="rtk_enabled" value="$(var rtk_enabled)"/>
        <arg name="road_marking_labels" value="$(var road_marking_labels)"/>
        <arg name="sign_board_labels" value="$(var sign_board_labels)"/>
        <arg name="min_segment_length" value="$(var min_segment_length)"/>
        <arg name="max_segment_distance" value="$(var max_segment_distance)"/>
    </include>

</launch>
