<launch>
    <arg name="use_sim_time" default="true"/>
    <arg name="log_level" default="warn"/>

    <arg name="resized_image" default="/sensing/camera/undistorted/image_raw"/>
    <arg name="resized_info" default="/sensing/camera/undistorted/camera_info"/>
    <arg name="use_eagleye" default="false"/>

    <arg name="predict_twist" default="/eagleye/twist" if="$(var use_eagleye)"/>
    <arg name="predict_twist" default="/kalman/twist" unless="$(var use_eagleye)"/>

    <arg name="static_linear_covariance" default="12.00"/>
    <arg name="static_angular_covariance" default="0.005"/>

    <!-- predict update -->
    <node pkg="modularized_particle_filter" exec="predictor_node" name="predictor_node" output="screen" args="--ros-args --log-level warn">
        <remap from="twist" to="$(var predict_twist)" />
        <remap from="initialpose" to="/rectified/initialpose" />
        <remap from="pose" to="/init/pose"/> 

        <param name="use_sim_time" value="$(var use_sim_time)"/>
        <param name="use_dynamic_noise" value="true"/>
        <param name="num_of_particles" value="500" />
        <param name="resampling_interval_seconds" value="1.5" />
        <param name="prediction_rate" value="50.0" />

        <param name="static_linear_covariance" value="$(var static_linear_covariance)" />
        <param name="static_angular_covariance" value="$(var static_angular_covariance)" />

        <param name="visualize" value="true"/>
        <remap from="/marker_array_particles" to="/weighted_particles/marker_array"/>
    </node>

    <!-- camera  correction -->
    <node name="camera_corrector" pkg="camera_particle_corrector" exec="camera_particle_corrector" output="screen" args="--ros-args --log-level warn">
        <param name="use_sim_time" value="$(var use_sim_time)"/>
        <param name="image_size" value="800"/>
        <param name="max_range" value="40.0"/>
        <param name="gamma" value="5.0"/>
        <param name="score_offset" value="-128.0"/>
        <param name="max_raw_score" value="100000.0"/>
        <param name="min_prob" value="0.1"/>
        <param name="far_weight_gain" value="0.001"/>

        <remap from="/weighted_particles" to="/weighted_particles"/>
        <remap from="/lsd_cloud" to="/projected_lsd_cloud"/>
    </node>

    <!-- ========================================= -->
    <!-- ============= gnss correction =========== -->
    <!-- ========================================= -->
    <node if="$(var use_eagleye)" name="gnss_particle_corrector" pkg="gnss_particle_corrector" exec="gnss_particle_corrector" output="screen" args="--ros-args --log-level warn">
        <param name="use_sim_time" value="$(var use_sim_time)"/>
        <param name="likelihood_min_weight" value="0.1"/>
        <param name="likelihood_flat_radius" value="2.0"/>
        <param name="likelihood_stddev" value="4.0"/>
        <param name="rtk_enabled" value="$(var rtk_enabled)"/>

        <remap from="/input/navpvt" to="/bridge/navpvt"/>
        <remap from="/input/height" to="/height"/>
        <remap from="/pose_with_covariance" to="/disabled/pose_with_covariance"/>
    </node>
    <node unless="$(var use_eagleye)" name="gnss_particle_corrector" pkg="gnss_particle_corrector" exec="gnss_particle_corrector" output="screen" args="--ros-args --log-level warn">
        <param name="use_sim_time" value="$(var use_sim_time)"/>
        <param name="likelihood_min_weight" value="0.1"/>
        <param name="likelihood_flat_radius" value="2.0"/>
        <param name="likelihood_stddev" value="4.0"/>
        <param name="rtk_enabled" value="$(var rtk_enabled)"/>

        <remap from="/input/navpvt" to="/sensing/gnss/ublox/navpvt"/>
        <remap from="/input/height" to="/height"/>
        <remap from="/pose_with_covariance" to="/disabled/pose_with_covariance"/>
    </node>
</launch>
