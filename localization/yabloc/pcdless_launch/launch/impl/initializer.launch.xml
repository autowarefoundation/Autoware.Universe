<launch>
    <arg name="initialpose_cov_xx_yy" default="[16.0,0.25]"/>

    <node name="camera_pose_initializer_node" pkg="camera_pose_initializer" exec="camera_pose_initializer" output="screen" args="--ros-args --log-level info">
        <param name="cov_xx_yy" value="$(var initialpose_cov_xx_yy)"/>
        <param name="max_range" value="20.0"/>
        <remap from="camera_info" to="$(var resized_info)"/>
        <remap from="initialpose" to="/initialpose"/>
        <remap from="/map/ll2_road_marking" to="/localization/map/ll2_road_marking"/>
    </node>

    <node if="false" name="particle_initializer_node" pkg="particle_initializer" exec="particle_initializer_node" output="screen" args="--ros-args --log-level info">
        <param name="cov_xx_yy" value="$(var initialpose_cov_xx_yy)"/>
        <remap from="initialpose" to="/initialpose"/>
        <remap from="ekf/initialpose" to="/initialpose3d"/>
    </node>
    <node if="false" name="gnss_based_pose_initializer" pkg="particle_initializer" exec="gnss_based_pose_initializer" output="screen" args="--ros-args --log-level info">
        <remap from="ublox_topic" to="/sensing/gnss/ublox/navpvt"/>
        <remap from="pose" to="/localization/pf/initial_gnss_pose"/>
    </node> 

</launch>