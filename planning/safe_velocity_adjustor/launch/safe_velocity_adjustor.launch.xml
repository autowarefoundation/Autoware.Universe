<launch>
  <!-- input/output -->
  <arg name="input_trajectory" default="/planning/scenario_planning/scenario_selector/trajectory"/>
  <arg name="input_obstacle_pointcloud" default="/perception/obstacle_segmentation/pointcloud"/>
  <arg name="output_trajectory" default="/planning/scenario_planning/safe_velocity_adjustor/trajectory"/>
  <arg name="output_debug_markers" default="/planning/scenario_planning/safe_velocity_adjustor/debug_markers"/>

  <!-- debug flags -->
  <arg name="publish_debug_markers" default="true"/>

  <arg name="param_path" default="$(find-pkg-share safe_velocity_adjustor)/config/default_safe_velocity_adjustor.param.yaml" />

  <let name="callgrind-launch-prefix" value="valgrind --tool=callgrind --dump-instr=yes -v --instr-atstart=no" />
  <let name="gdb-launch-prefix" value="konsole -e gdb -ex run --args" />
  <node pkg="safe_velocity_adjustor" exec="safe_velocity_adjustor" name="safe_velocity_adjustor" output="screen"
    launch-prefix="$(var gdb-launch-prefix)">
    <param from="$(var param_path)" />
    <param name="publish_debug_markers" value="$(var publish_debug_markers)"/>
    <remap from="~/input/trajectory" to="$(var input_trajectory)"/>
    <remap from="~/input/obstacle_pointcloud" to="$(var input_obstacle_pointcloud)"/>
    <remap from="~/output/trajectory" to="$(var output_trajectory)"/>
    <remap from="~/output/debug_markers" to="$(var output_debug_markers)"/>
  </node>

</launch>
